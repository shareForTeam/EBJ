<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:gravity="center">


        <CheckBox
            android:id="@+id/item_check_button"
            android:layout_width="20dp"
            android:gravity="center"
            android:button="@drawable/shopping_car_chekbox"
            android:layout_height="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="120"
        android:gravity="center">

        <ImageView
            android:id="@+id/adapter_image"
            android:layout_width="59dp"
            android:layout_height="78dp"
            android:src="@mipmap/close" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="400">

        <TextView
            android:id="@+id/adapter_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:text="ABLE JEANS 男式牛仔夹克"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@mipmap/kuangkuang"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_alignLeft="@+id/adapter_titel"
            android:layout_alignStart="@+id/adapter_titel">
            <!--加减按钮，待加图-->

            <ImageButton
                android:id="@+id/imagebutton_jian"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:src="@mipmap/jian_button"
                android:background="#fff"
                android:layout_weight="0.74" />

            <!--中间数字-->
            <EditText
                android:id="@+id/edittext_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:maxLength="2"
                android:text="1"
                android:inputType="number"
                android:textSize="12sp"
                />

            <ImageButton
                android:id="@+id/imagebutton_jia"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:clickable="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/jia_button"
                android:background="#fff"
                android:layout_gravity="center"
                android:layout_weight="1" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="120">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center">
            <!--尺寸图片-->
            <ImageView
                android:id="@+id/adapter_chicun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/adapter_chicun_s"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/image_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="299"
                android:layout_marginLeft="4dp"
                android:textSize="16sp"
                android:id="@+id/adapter_money" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>