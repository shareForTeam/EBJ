<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:gravity="center">

        <!--选择按钮，使用drawable下的自定义图片-->
        <RadioButton
            android:id="@+id/radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@mipmap/radiobutton_check_true"
            android:checked="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="120"
        android:gravity="center">

        <ImageView
            android:id="@+id/adapter_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="400">

        <TextView
            android:id="@+id/adapter_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="ABLE JEANS 男式牛仔夹克"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="12dp"
            android:background="@mipmap/gouwuche_jia_jian"
            android:orientation="horizontal">
            <!--加减按钮，待加图-->

            <ImageButton
                android:id="@+id/imagebutton_jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <!--中间数字-->
            <EditText
                android:id="@+id/edittext_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:text="1"
                />

            <ImageButton
                android:id="@+id/imagebutton_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="120">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center">
            <!--尺寸图片-->
            <ImageView
                android:id="@+id/adapter_chicun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/adapter_chicun"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥299" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>